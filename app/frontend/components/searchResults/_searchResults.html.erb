<% if products&.any? %>
  <% products.each do |product| %>
    <%= link_to product_path(product) do %>
      <div class="product-card">
        <div class="product-image">
          <%= image_tag(product.image) %>
        </div>
        <div class="product-text">
          <% if product.try(:highlight).try(:name) %>
            <% product.try(:highlight).try(:name).each do |snippet| %>
              <p class="product-name"><%= snippet.html_safe %></p>
            <% end %>
          <% else %>
            <p class="product-name"><%= product.name.html_safe %></p>
          <% end %>
          <p class="product-price">â‚¬<%= product.price %></p>
        </div>
      </div>
    <% end %>
  <% end %>
<% else %>
  <p>Er zijn geen resultaten voor deze zoekcombinatie</p>
<% end %>
